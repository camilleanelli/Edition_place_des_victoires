<h1>Livres</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.size %></td>
        <td><%= book.page_count %></td>
        <td><%= book.weight %></td>
        <td><%= book.cover_type %></td>
        <td><%= book.isbn %></td>
        <td><%= book.illustration_count %></td>
        <td><%= book.price %></td>
        <td><%= book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
